<div class="{{cssClass}} {{type}} flexcol">

	{{!-- Sheet Header --}}
	<header class="sheet-header">
		<img src="{{actor.img}}" data-action="editImage" data-edit="img" height="100" width="100"/>
		<div class="header-fields">
			<h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>

			<div class="resources grid grid-3col">

				<div class="resource flex-group-center">
					<label for="system.maneuverability.value" class="resource-label" data-action="rollAbilityCheck" data-ability="maneuverability">Maneuverability</label>
					<div class="resource-content flexrow flex-center flex-between">
					<input type="text" name="system.maneuverability.value" value="{{system.maneuverability.value}}" data-dtype="Number"/>
					<span> / </span>
					<input type="text" name="system.maneuverability.max" value="{{system.maneuverability.max}}" data-dtype="Number"/>
					</div>
				</div>

				<div class="resource flex-group-center">
					<label for="system.power.value" class="resource-label" data-action="rollAbilityCheck" data-ability="power">Power</label>
					<div class="resource-content flexrow flex-center flex-between">
					<input type="text" name="system.power.value" value="{{system.power.value}}" data-dtype="Number"/>
					<span> / </span>
					<input type="text" name="system.power.max" value="{{system.power.max}}" data-dtype="Number"/>
					</div>
				</div>
				
				 <div class="resource flex-group-center">
					<label for="system.robustness.value" class="resource-label" data-action="rollAbilityCheck" data-ability="robustness">Robustness</label>
					<div class="resource-content flexrow flex-center flex-between">
					<input type="text" name="system.robustness.value" value="{{system.robustness.value}}" data-dtype="Number"/>
					<span> / </span>
					<input type="text" name="system.robustness.max" value="{{system.robustness.max}}" data-dtype="Number"/>
					</div>
				</div>

			</div>
		</div>
	</header>
	<section class="speedheroes rollout">
		<input type="button" data-action="onRoll" data-rolltype="main" value="LET'S ROLLOUT!!!"/>
		<input type="button" data-action="onRoll" data-rolltype="tech" value="TECH TIME"/>
	</section>

	{{!-- Sheet Tab Navigation --}}
	<nav class="sheet-tabs tabs" data-group="primary">
		{{!-- Default tab is specified in actor-sheet.mjs --}}
		<a class="item" data-tab="techs">Techs</a>
		<a class="item" data-tab="equipment">Equipment</a>
		<a class="item" data-tab="pilot">Pilot</a>
		<a class="item" data-tab="effects">Effects</a>
	</nav>

	{{!-- Sheet Body --}}
	<section class="sheet-body">

		{{!-- Owned Features Tab --}}
		<div class="tab techs active" data-group="primary" data-tab="techs">
			<section class="grid grid-3col">
				<div class="abilities flexcol">
					{{#each techs as |tech key|}}
					<div class="ability flexrow flex-group-center">
						<span><img src="{{tech.img}}" alt="{{tech.name}}"/></span>
						<label for="tech.{{key}}" class="resource-label" data-roll="" data-label="{{tech.name}}">{{tech.name}}</label>
						<span class="tech-mod rollable" data-roll="db" data-label="{{tech.description}}">{{tech.description}}</span>
					</div>
					{{/each}}
				</div>
			</section>
		</div>


		{{!-- Owned Items Tab --}}
		<div class="tab equipment" data-group="primary" data-tab="equipment">
			{{> "systems/speedheroes/templates/actor/parts/actor-equipment.hbs"}}
		</div>

		{{!-- Owned Spells Tab --}}
		<div class="tab pilot" data-group="primary" data-tab="pilot">
			{{> "systems/speedheroes/templates/actor/parts/actor-pilot.hbs"}}
		</div>

		{{!-- Active Effects Tab --}}
		<div class="tab effects flexcol" data-group="primary" data-tab="effects">
			{{> "systems/speedheroes/templates/actor/parts/active-effects.hbs"}}
		</div>

	</section>
</div>